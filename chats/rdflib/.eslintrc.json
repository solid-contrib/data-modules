{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:require-extensions/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "require-extensions"
    ],
    "rules": {
    },
    "overrides": [
        {
            "files": ["*.spec.ts", "globalSetup.ts", "globalTeardown.ts"],
            "rules": {
                "require-extensions/require-extensions": 0,
                "require-extensions/require-index": 0
            }
        }
    ]
}
