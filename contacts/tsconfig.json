{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "lib": [
      "es2020", "DOM"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "src/test-support", "src/e2e-tests"]
}
