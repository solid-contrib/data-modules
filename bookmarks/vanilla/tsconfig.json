{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "baseUrl": "src",
    "stripInternal": true,

  },
  "types": ["node"],
  "include": ["src", "test", "__test__"],
  "exclude": ["node_modules", "**/test/*"]
}
